#include<iostream>
using namespace std;
void selectionsort(int array[],int n)
{
   for(int i=0;i<=n-2;i++)
   {
    int mini=i;
    for(int j=i;j<=n-1;j++)
    {
        if(array[j]<array[mini])
        {
            mini=j;
        }
        
    }
    int temp=array[i];
    array[i]=array[mini];
    array[mini]=temp;
   }
    cout << "After selection sort: " << "\n";
  for (int i = 0; i < n; i++) {
    cout << array[i] << " ";
  }
  cout << "\n";

}
int main() {
  int arr[] = {13,46,24,52,20,9};
  int n = sizeof(arr) / sizeof(arr[0]);
   cout << "Before selection sort: " << "\n";
   for (int i = 0; i < n; i++) {
    cout << arr[i] << " ";
  }
  cout << "\n";
  selectionsort(arr, n);
  return 0;
}



